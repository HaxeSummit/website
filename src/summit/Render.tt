(: static function speakers(speakerList:Array<Speaker>) :)   
  <ul>
    (: for s in speakerList :)
    (: var id = 'speaker-' + s.id :)
    <li>
      <input id="(: id :)" type="radio" name="current-speaker" />
      <label for="(: id :)">
        <div class="image">
          <img src="(: s.image :)">
        </div>
        <h3>(: s.fullName :)</h3>
        <p>(: s.jobTitle :)</p>
      </label>
      <div class="details">
        <label for="nospeaker">Close</label>
        <div class="image">
          <img src="(: s.image :)">
        </div>
        <h2>(: s.fullName :)</h2>
        <h3>(: s.jobTitle :)</h3>
        <div class="bio">(: s.bio :)</div>
        <h4>Sessions held by (: s.shortName :):</h4>
        <ul class="talks">
          (: for t in s.talks :)
            <li>
              <h3><label for="talk-(: t.id:)">(: t.title :)</label></h3>
              (: switch t.description.toString().indexOf("<"+"hr") :)
                (: case -1 :) (: t.description :)
                (: case v :) 
                  (: cast t.description.toString().substr(0, v) :)
              (: end :)
            </li>
          (: end :)
        </ul>
      </div>
    </li>
    (: end :)
  </ul>
(: end :)


(: static function document(title, body, ?meta:Map<String, String>) :)
  <!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="utf-8">
      <title>(: title :)</title>
      <link rel="stylesheet" href="/assets/styles.css">
      <link href='https://fonts.googleapis.com/css?family=Roboto:100,200,300,400,500,600,700,800,900' rel='stylesheet' type='text/css'>
      <link href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="icon" href="/assets/favicon.png" type="image/png" />
      (: if meta != null :)
        (: for k in meta.keys() :)
          <meta property="(: k :)" content="(: meta[k] :)" />
        (: end :)
      (: end :)
    </head>
    <body>
      (: body :)
      <script src="/assets/script.js"></script>
    </body>
  </html>
(: end :)

