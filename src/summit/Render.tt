(: static function renderDay(name, talks:Array<Talk>, speakers:Map<String, Speaker>) :)
  <h2>(: name :)</h2>
  <ol class="talks">
    (: for t in talks :)
      <li data-track="(: t.track :)" data-starts="(: t.starts.format('%k:%M').trim() :)" data-duration="(: t.duration :)">
        <label (: if t.title != "TBA" && t.title != "Lunch" :)for="talk-(: t.id :)"(: end :)>
          (: if t.title.toString().length > 30 && t.duration < 30 :)
            <small>(: t.title :)</small>
          (: else :)
            <span class="title">
              (: t.title :)
            </span>
            (: if t.title == "Lunch" :)
              <span class="sponsor">(: t.speakers[0] :)</span>
            (: end :)
          (: end :)
          <time datetime="(: t.starts :)">
            <span>(: t.starts.format('%H:%M') :)</span>
            <span>(: t.starts.delta(t.duration.minutes()).format('%H:%M') :)</span>
          </time>
        </label>
        (: var id = 'talk-' + t.id :)
        <input id="(: id :)" type="radio" name="current-speaker" />
        (: if t.title != "TBA" && t.title != "Lunch" :)
          <div class="details">
            <label for="nospeaker">Close</label>
            <h1>(: t.title :)</h1>
            <h3>(: t.starts.format('Sept %d @ %H:%M') :) - (: t.starts.delta(t.duration.minutes()).format('%H:%M') :)</h3>
            (: t.description :)
            (: if t.speakers != null && t.speakers.length > 0 :)
              <h4>Presented by:</h4>
              <ul class="speakers">
                (: for s in t.speakers :)
                  <label for="speaker-(: s :)">
                    (: var s = speakers[s] :)
                    <div class="image">
                      <img src="(: s.image :)">
                    </div>
                    <h2>(: s.fullName :)</h2>
                    <h3>(: s.jobTitle :)</h3>              
                  </label>
                (: end :)
              </ul>
            (: end :)
          </div>   
        (: end :)     
      </li>
    (: end :)
  </ol>
(: end :)

